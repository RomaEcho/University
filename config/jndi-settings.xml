<?xml version="1.0" encoding="UTF-8"?>
<Settings>
    <!-- server.xml -->
    <Resource name="jdbc/university" 
                auth="Container"
                type="javax.sql.DataSource" 
                driverClassName="org.postgresql.Driver"
                url="jdbc:postgresql://localhost:5432/university"
                username="new_user" 
                password="user" 
                maxTotal="20" 
                maxIdle="10" 
                maxWaitMillis="-1">
    </Resource>
    <!-- context.xml -->
    <ResourceLink 
        name="jdbc/university" 
        global="jdbc/university" 
        type="javax.sql.DataSource">
    </ResourceLink>
</Settings>
